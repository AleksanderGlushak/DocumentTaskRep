<!-- You've already have this config in root resources folder
 It's not a good idea to put config files into Meta-inf folder. This folder should contain some meta-information
 'resources' folder must be inside `main` folder for WAR app
 -->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>